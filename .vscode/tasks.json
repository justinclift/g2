    "version": "2.0.0",
    "options": {
        "cwd": "${workspaceRoot}/g2core"
    },
    "problemMatchers": [
        {
            // COPY THIS FOR EACH ONE FOR NOW :<
            // Because there's a bug where fileLocation is needed
            // And you can't share problem solvers across tasks (yet)
            "owner": "cpptools",
            "fileLocation": [
                "relative",
                "${workspaceFolder}/g2core",
            ],
            "pattern": {
                "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                "file": 1,
                "line": 2,
                "column": 3,
                "severity": 4,
                "message": 5
            }
        }
